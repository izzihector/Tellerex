<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="login_layout_no_db" inherit_id="web.login_layout" name="Login Layout">
        <xpath expr="//div[@class='text-center small mt-4 pt-3 border-top']" position="before">
            <t t-set="disable_footer" t-value="1"/>
        </xpath>
    </template>
   
       <template id="signup_layout_no_db" inherit_id="auth_signup.login" name="Sign up - Reset Password">
        <xpath expr="//div[@class='justify-content-between mt-2 d-flex small']" position="before">
            <t t-set="signup_enabled" t-value="0"/>
        </xpath>
    </template>


</odoo>
