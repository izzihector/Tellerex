<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
       <record id="ticl_order_form_view" model="ir.ui.view">
            <field name="name">ticl.order.form</field>
            <field name="model">ticl.order</field>
            <field name="arch" type="xml">
                <form string="Work Order" class="o_sale_order">
                <header>
                    <button name="confirm_order" class="oe_highlight" string="Confirm Order" 
                        type="object"/>
                    <field name="states" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="view_stock_move"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-users">
                            <field name="stock_move_count" widget="statinfo" string="Stock Move"/>
                        </button>
                         <button name="view_stock_transfer"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-users">
                            <field name="stock_transfer_count" widget="statinfo" string="Transfer"/>
                        </button>
                    </div>             
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="condition_id" options="{'no_create': True, 
                                    'no_create_edit':True, 'no_open':True}" required="1"/>
                            <field name="warehouse_id" required="1"/>
                        </group>
                        <group>
                           <field name="receive_date"/>
                            <field name="user_id" options="{'no_create': True, 
                            'no_create_edit':True, 'no_open':True}"/>
                            <field name="location_dest_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Part Order">
                            <field name="ticl_order_lines">
                                <tree string="Part Order" editable="bottom">
                                    <field name="product_id" string="Chase Model Name"/>
                                    <field name="part_name"/>
                                    <field name="serial_number" required="1"/>
                                    <field name="manufacturer_id" options="{'no_create': True, 
                                    'no_create_edit':True, 'no_open':True}"/>
                                    <field name="product_uom_qty" invisible="1"/>
                                    <field name="oem_pn"/>
                                    <field name="product_function"/>
                                    <field name="product_lenght"/>
                                    <field name="product_width"/>
                                    <field name="product_height"/>
                                    <field name="weight"/>
                                    <field name="product_squre_feet"/>             
                                    <field name="count_number"/>
                                    <field name="fund_doc_type"/>
                                    <field name="fund_doc_number"/>
                                    <field name="ticl_project_id"/>
                                    <field name="categ_id" options="{'no_create': True, 
                                    'no_create_edit':True, 'no_open':True}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>
        

        <record id="ticl_order_tree_view" model="ir.ui.view">
            <field name="name">ticl.order.tree</field>
            <field name="model">ticl.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="receive_date"/>
                    <field name="name"/>
                    <field name="warehouse_id"/>
                    <field name="condition_id"/>
                    <field name="user_id"/>
                    <field name="location_dest_id" invisible="1"/>
                    <field name="states"/>
                </tree>
            </field>
        </record>

        <record id="action_ticl_order" model="ir.actions.act_window">
            <field name="name">Work Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ticl.order</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a New Work Order.
                </p>
            </field>
        </record>

        <menuitem name="Work Order" id="work_management_menu" icon="fa-car" 
            groups="ticl_management.ticl_group_manager"/>
        <menuitem id="work_management_sub_menu" name=" Work Order" parent="work_management_menu" sequence="1" groups="ticl_management.ticl_group_manager"/>
        <menuitem id="ticl_mgmt_order" name=" Work Order" 
            parent="work_management_sub_menu" action="action_ticl_order" sequence="1"
            groups="ticl_management.ticl_group_manager"/>


    <!-- Sequence Number For Work Order -->
        <record id="seq_work_order" model="ir.sequence">
            <field name="name">ticl_order_sequence</field>
            <field name="code">ticl.order</field>
            <field name="prefix">WO</field>
            <field name="padding">5</field>
        </record>

    </data>
</odoo>
